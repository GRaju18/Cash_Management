<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:table="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc" height="100%" xmlns:f="sap.f" >
	<Dialog contentWidth="{= ${device>/system/desktop} ? '55rem':'auto'}" class="sapUiSizeCompact iconDialog waterDialog" horizontalScrolling="false" draggable="true">
		<customHeader>
			<Bar>
				<contentMiddle>
					<!--<Avatar displaySize="S" showBorder="true" imageFitType="Contain" displayShape="Circle" src="./images/icons/Nutrients.png" backgroundColor="Random" class="sapUiTinyMarginBeginEnd sapUiTinyMarginBottom"/> -->
					<Label text="Feeding Wizard" design="Bold"/>
				</contentMiddle>
			</Bar>
		</customHeader>

		<FlexBox class="sapUiSmallMargin  wateringFlex" >
		<f:GridContainer>
					<f:layout>
						<f:GridContainerSettings rowSize="1rem" columnSize="10rem" gap="8px"/>
					</f:layout>
					<f:layoutXS>
						<f:GridContainerSettings rowSize="1rem" columnSize="10rem" gap="8px"/>
					</f:layoutXS>
		 <VBox>
					<Label text="Feed Distribution:"/>
					<ComboBox id="fd" width="10rem">
						<items>
							<core:Item text="Per Plant" key="P"></core:Item>
							<core:Item text="Evenly Distributed" key="E"></core:Item>
						</items>
					</ComboBox>
				</VBox> 
				<VBox >
					<Label text="Feed Type:"/>
					<ComboBox id="ft" width="10rem">
						<items>
							<core:Item text="Liquid" key="Liquid"></core:Item>
							<core:Item text="Spray" key="Spray"></core:Item>
							<core:Item text="Solid" key="Solid"></core:Item>
						</items>
					</ComboBox>
				</VBox> 
				<VBox >
					<Label text="Nutrient:"/>
					<ComboBox id="nt" width="10rem">
						<items>
							<core:Item text="Base A" key="Base A"></core:Item>
							<core:Item text="Base B" key="Base B"></core:Item>
							<core:Item text="Root Tonic C" key="Root Tonic C"></core:Item>
							<core:Item text="Resin D" key="Resin D"></core:Item>
							<core:Item text="Root Ignitor" key="Root Ignitor"></core:Item>
						</items>
					</ComboBox>
				</VBox>
			 <VBox >
					<Label text="Amount:"></Label>
					<HBox>
						<Input id="amount" width="5rem"></Input>
						<ComboBox id="unit" width="5rem">
							<items>
								<core:Item text="ml" key="ml"></core:Item>
								<core:Item text="gal" key="gal"></core:Item>
								<core:Item text="l" key="l"></core:Item>
								<core:Item text="cups" key="cups"></core:Item>
								<core:Item text="fl. Oz" key="floz"></core:Item>
								<core:Item text="pint" key="pint"></core:Item>
								<core:Item text="quart" key="quart"></core:Item>
								<core:Item text="tbsp" key="tbsp"></core:Item>
								<core:Item text="tsp" key="tsp"></core:Item>
							</items>
						</ComboBox>
					</HBox>
				</VBox>
			 <VBox >
					<Label text="Solvent:"></Label>
					<HBox>
						<Input id="samount" width="5rem"></Input>
						<ComboBox id="sunit" width="5rem">
							<items>
								<core:Item text="ml" key="ml"></core:Item>
								<core:Item text="gal" key="gal"></core:Item>
								<core:Item text="l" key="l"></core:Item>
								<core:Item text="cups" key="cups"></core:Item>
								<core:Item text="fl. Oz" key="floz"></core:Item>
								<core:Item text="pint" key="pint"></core:Item>
								<core:Item text="quart" key="quart"></core:Item>
								<core:Item text="tbsp" key="tbsp"></core:Item>
								<core:Item text="tsp" key="tsp"></core:Item>
							</items>
						</ComboBox>
					</HBox>
				</VBox> 
				</f:GridContainer> 
		</FlexBox>
		<FlexBox class="wateringFlexTable" direction="Column">
			<Table inset="true" id="feedingTable" width="auto" mode="MultiSelect" items="{path:'ChartModel>/wateringTableData'}">
				<headerToolbar>
					<Toolbar>
						<Text class="tableTitle" id="feedCount" text="Items"/>
						<ToolbarSpacer/>
						<Button text="Remove" type="Reject" press="removeFeedSelectedEntry"></Button>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column popinDisplay="Inline">
						<Label text="Plant ID" design="Bold"/>
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="true" popinDisplay="Inline">
						<Label text="Plant Name" design="Bold"/>
					</Column>
					<Column popinDisplay="Inline">
						<Label text="Cubes Room" design="Bold"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem >
						<cells>
							<Text text="{ChartModel>U_NPLID}"/>
							<Text text="{ChartModel>U_NPFNM}"/>
							<Text text="{ChartModel>U_NLCNM}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</FlexBox>
		<beginButton>
			<Button id="seachBtn" text="Go" type="Accept" press="applyFeeding" width="5rem"/>
		</beginButton>
		<endButton>
			<Button text="Close" type="Reject" press="onFeedClose" width="5rem"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>