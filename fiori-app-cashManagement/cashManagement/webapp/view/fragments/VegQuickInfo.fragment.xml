<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Popover class="sapUiContentPadding" placement="Auto" initialFocus="action" contentWidth="350px" contentHeight="350px">
		<customHeader>
			<Bar>
				<contentMiddle>
					<Label text="Plant Details" design="Bold"/>
				</contentMiddle>
			</Bar>
		</customHeader>
		<content>
			<f:SimpleForm id="SimpleFormChange471" editable="true" layout="ResponsiveGridLayout" title="" labelSpanXL="4" labelSpanL="4" labelSpanM="4"
				labelSpanS="12" adjustLabelSpan="false" emptySpanXL="1" emptySpanL="1" emptySpanM="1" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1"
				singleContainerFullSize="false">
				<f:content>
					<Label text=""/>
					<Text text="{U_NSTNM} - {U_NPLID}" id="plantId"/>
					<Label text="Mark this as a mother plants"/>
					<Switch state="" id="mothertoggleButton" change="handleMotherPlant"></Switch>
					<Label text="Planted On" design="Bold"/>
					<Text text="{U_NCRDT1}"/>
					<!--<Text text="{path:'U_NCRDT',type:'sap.ui.model.type.Date',formatOptions:{pattern:'MMM dd, YYYY',strictParsing: true , UTC: true}}"/>-->
					<Label text="Current Location" design="Bold"/>
					<Text text="{U_NLCNM}"/>
					<Label text="Moved to Flower on" design="Bold"/>
					<!--<Text text="{path:'U_NFGRD',type:'sap.ui.model.type.Date',formatOptions:{pattern:'MMM dd, YYYY',strictParsing: true , UTC: true}}"/>-->
					<Text text="{U_NVGRD1}"/>
				</f:content>
			</f:SimpleForm>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
			</Toolbar>
		</footer>
	</Popover>
</core:FragmentDefinition>