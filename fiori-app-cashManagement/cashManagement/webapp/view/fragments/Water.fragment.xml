<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:table="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc" height="100%">
	<Dialog contentWidth="{= ${device>/system/desktop} ? '50rem':'auto'}" class="sapUiSizeCompact"
		horizontalScrolling="false" draggable="true">
		<customHeader>
			<Bar>
				<contentMiddle>
					<!--<Avatar displaySize="S" showBorder="true" imageFitType="Contain" displayShape="Circle" src="./images/icons/Water.png" backgroundColor="Random" class="sapUiTinyMarginBeginEnd sapUiTinyMarginBottom"/> -->
					<Label text="Watering Wizard"/>
				</contentMiddle>
			</Bar>
		</customHeader>
		<VBox alignItems="Center">
			<HBox>
				<VBox class="sapUiSmallMargin">
					<Label text="Water Distribution:"/>
					<ComboBox id="wd" width="12rem">
						<items>
							<core:Item text="Per Plant" key="P"></core:Item>
							<core:Item text="Evenly Distributed" key="E"></core:Item>
						</items>
					</ComboBox>
				</VBox>
				<VBox class="sapUiSmallMargin">
					<Label text="Amount:"></Label>
					<HBox>
						<Input id="amount" width="7rem"></Input>
						<ComboBox id="unit" width="5rem">
							<items>
								<core:Item text="ml" key="ml"></core:Item>
								<core:Item text="gal" key="gal"></core:Item>
								<core:Item text="l" key="l"></core:Item>
								<core:Item text="cups" key="cups"></core:Item>
								<core:Item text="fl. Oz" key="floz"></core:Item>
								<core:Item text="pint" key="pint"></core:Item>
								<core:Item text="quart" key="quart"></core:Item>
								<core:Item text="tbsp" key="tbsp"></core:Item>
								<core:Item text="tsp" key="tsp"></core:Item>
							</items>
						</ComboBox>
					</HBox>
				</VBox>
				<VBox class="sapUiSmallMargin">
					<Label text="pH Level:"></Label>
					<HBox>
						<Input id="phL" change="onPhValueChange" width="12rem"/>
					</HBox>
				</VBox>
			</HBox>
		</VBox>
		<FlexBox direction="Column" class="sapUiSmallMargin">
			<Table id="wateringTable" width="auto" mode="MultiSelect" items="{path:'jsonModel>/wateringTableData'}">
				<headerToolbar>
					<Toolbar>
						<Text  id="waterCount" text="Items"/>
						<ToolbarSpacer/>
						<Button text="Remove" type="Reject" press="removeSelectedEntry"></Button>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column popinDisplay="Inline">
						<Label text="Plant ID" design="Bold"/>
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="true" popinDisplay="Inline">
						<Label text="Plant Name" design="Bold"/>
					</Column>
					<Column popinDisplay="Inline">
						<Label text="Cubes Room" design="Bold"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem >
						<cells>
							<Text text="{jsonModel>U_NPLID}"/>
							<Text text="{jsonModel>U_NPFNM}"/>
							<Text text="{jsonModel>U_NLCNM}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</FlexBox>
		<beginButton>
			<Button id="seachBtn" type="Accept" text="Go" press="applyWatering" width="5rem"/>
		</beginButton>
		<endButton>
			<Button text="Close" type="Reject" press="onWaterClose" width="5rem"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>